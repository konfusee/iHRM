# Database Configuration
# Copy this file to .env and fill in your actual values

# Database host
DB_HOST=your_database_host

# Database port
DB_PORT=3306

# Database name
DB_NAME=your_database_name

# Database username
DB_USERNAME=your_database_username

# Database password
DB_PASSWORD=your_database_password

# Database connection pool settings (optional, defaults will be used if not set)
DB_POOL_SIZE=10
DB_MIN_IDLE=5
DB_IDLE_TIMEOUT=300000
DB_CONNECTION_TIMEOUT=20000
DB_MAX_LIFETIME=1200000

# Session Management Configuration
# Session timeout in minutes for regular sessions
SESSION_TIMEOUT_MINUTES=30

# Session duration in days for "Remember Me" sessions
SESSION_REMEMBER_DAYS=7

# How often to run session cleanup (in minutes)
SESSION_CLEANUP_INTERVAL_MINUTES=30

# How long to keep inactive sessions before deletion (in days)
SESSION_INACTIVE_RETENTION_DAYS=30

# Single device mode - if true, only one active session per user is allowed
SESSION_SINGLE_DEVICE=false